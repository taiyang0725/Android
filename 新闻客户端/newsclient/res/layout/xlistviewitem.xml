<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_news_icon"
        android:layout_width="@dimen/in2"
        android:layout_height="@dimen/in2"
        android:layout_margin="@dimen/small3"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/txt_news_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/txt_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/in3"
           
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

</LinearLayout>